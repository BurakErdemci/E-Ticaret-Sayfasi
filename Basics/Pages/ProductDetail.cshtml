@page "{id:int}"
@model ProductDetailModel
@{
    ViewData["Title"] = "Ürün Detay";
}

<section class="product-detail-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                @if (Model.Product != null)
                {
                    <div class="card h-100 shadow-sm text-center">
                        <img src="@Model.Product.CoverImagePath" class="card-img-top" alt="@Model.Product.Name" style="object-fit:cover;width:100%;height:300px;">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h2 class="card-title mb-3">@Model.Product.Name</h2>
                            <p class="card-text fw-bold mb-2">Fiyat: @Model.Product.Price.ToString("C")</p>
                            <p class="card-text mb-2"><b>Marka:</b> @Model.Product.BrandName</p>
                            <form method="post" class="d-flex flex-column align-items-center gap-2 mt-3">
                                <input type="hidden" name="productId" value="@Model.Product.Id" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" name="action" value="addToCart" class="btn btn-primary px-4 py-2 w-75">
                                    <i class="bi bi-cart-plus"></i> Sepete Ekle
                                </button>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <p>Ürün bulunamadı.</p>
                }
            </div>
        </div>
    </div>
</section>
<style>
.card-img-top {
    object-fit: cover;
    width: 100%;
    height: 300px;
}
.card,
.card.product-card,
.card.h-100 {
    background-color: #181b1b !important;
    border: 1px solid #232323;
    color: #fff;
}
.card .card-title,
.card .card-text {
    color: #fff;
}
.card .btn-primary {
    background: #232323 !important;
    color: #ffb347 !important;
    border: 1px solid #ffb347 !important;
    font-size: 1.1rem;
    font-weight: 600;
    transition: background 0.2s, color 0.2s;
}
.card .btn-primary:hover {
    background: #ffb347 !important;
    color: #181b1b !important;
}
</style> 