@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
}
<div class="container d-flex align-items-center justify-content-center min-vh-100" style="background: #181818;">
    <div class="card shadow-lg p-4" style="max-width: 450px; width: 100%; background: #232323; border-radius: 16px;">
        <h2 class="text-center mb-4" style="color: #ff9900;">Kayıt Ol</h2>
        <form method="post">
            <div class="mb-3">
                <label asp-for="Input.FirstName" class="form-label text-light"></label>
                <input asp-for="Input.FirstName" class="form-control bg-dark text-light" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.LastName" class="form-label text-light"></label>
                <input asp-for="Input.LastName" class="form-control bg-dark text-light" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.DateOfBirth" class="form-label text-light"></label>
                <input asp-for="Input.DateOfBirth" class="form-control bg-dark text-light" type="date" />
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label text-light"></label>
                <input asp-for="Input.Email" class="form-control bg-dark text-light" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label text-light"></label>
                <input asp-for="Input.Password" class="form-control bg-dark text-light" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label text-light"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control bg-dark text-light" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn w-100" style="background: #ff9900; color: #fff;">Kayıt Ol</button>
            <div class="mt-3 text-center">
                <a href="/Login" class="text-warning">Zaten hesabınız var mı? Giriş Yapın</a>
            </div>
            <div class="text-danger mt-2">
                @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors)) {
                    <div>@err.ErrorMessage</div>
                }
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 