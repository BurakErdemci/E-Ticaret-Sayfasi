@page "/category/{id:int}"
@model CategoryDetailModel
@{
    ViewData["Title"] = Model.ParentCategory?.Name + " Alt Kategoriler";
}

<section class="category-detail-section py-5">
    <div class="container">
        <h2 class="mb-4">@Model.ParentCategory?.Name Alt Kategoriler</h2>
        <div class="row">
            @if (Model.SubCategories != null && Model.SubCategories.Any())
            {
                foreach (var category in Model.SubCategories)
                {
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4 d-flex align-items-stretch">
                        <div class="card h-100 shadow-sm text-center">
                            <img src="@category.CoverImagePath" class="card-img-top" alt="@category.Name" style="object-fit:cover;width:100%;height:200px;">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <h5 class="card-title text-truncate" title="@category.Name">@category.Name</h5>
                                <a href="/product?categoryId=@category.Id" class="btn btn-primary w-100 mt-auto">Ürünleri Gör</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p>Alt kategori bulunamadı.</p>
                </div>
            }
        </div>
    </div>
</section>
<style>
.card-img-top {
    object-fit: cover;
    width: 100%;
    height: 200px;
}
.card,
.card.product-card,
.card.h-100 {
    background-color: #181b1b !important;
    border: 1px solid #232323;
    color: #fff;
}
.card .card-title,
.card .card-text {
    color: #fff;
}
.card .btn-primary {
    background: #232323 !important;
    color: #ffb347 !important;
    border: 1px solid #ffb347 !important;
}
.card .btn-primary:hover {
    background: #ffb347 !important;
    color: #181b1b !important;
}
</style> 