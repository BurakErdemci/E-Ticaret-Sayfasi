@page
@model LoginModel
@{
    ViewData["Title"] = "Giriş Yap";
}
<div class="container d-flex align-items-center justify-content-center min-vh-100" style="background: #181818;">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; background: #232323; border-radius: 16px;">
        <h2 class="text-center mb-4" style="color: #ff9900;">Giriş Yap</h2>
        <form method="post">
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label text-light"></label>
                <input asp-for="Input.Email" class="form-control bg-dark text-light" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label text-light"></label>
                <input asp-for="Input.Password" class="form-control bg-dark text-light" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="Input.RememberMe" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label text-light"></label>
            </div>
            <button type="submit" class="btn w-100" style="background: #ff9900; color: #fff;">Giriş Yap</button>
            <div class="mt-3 text-center">
                <a href="/Register" class="text-warning">Hesabınız yok mu? Kayıt Olun</a>
            </div>
            <div class="text-danger mt-2">
                @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors)) {
                    <div>@err.ErrorMessage</div>
                }
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 