@model Panel.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_AccountFormLayout";
}

<div class="card o-hidden border-0 shadow-lg">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
            <div class="col-lg-6">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                    </div>
                    <form asp-controller="account" asp-action="login" method="post" class="user">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <input asp-for="Email" class="form-control form-control-user"
                                   aria-describedby="emailHelp">
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" type="password" class="form-control form-control-user" />
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-checkbox small">
                                <input asp-for="RememberMe" type="checkbox" class="custom-control-input" id="customCheck"/>
                                <label class="custom-control-label" for="customCheck">Remember Me</label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            Login
                        </button>
                    </form>
                    <hr>
                    <div class="text-center">
                        <a class="small" href="forgot-password.html">Forgot Password?</a>
                    </div>
                    <div class="text-center">
                        <a class="small" asp-controller="account" asp-action="register">Create an Account!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





