@model Core.Concretes.DTOs.Panel.CategoryDTO

@{
    ViewData["Title"] = "Category Details";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Category Details</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-edit fa-sm text-white-50"></i> Edit
        </a>
        <a asp-action="Index" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <!-- Category Details Card -->
    <div class="col-xl-6 col-lg-6">
        <div class="card shadow mb-4">
            <!-- Card Header -->
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Basic Information</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tr>
                            <th class="w-25">ID</th>
                            <td>@Model.Id</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <th>Parent Category</th>
                            <td>@(Model.ParentCategory != null ? Model.ParentCategory.Name : "Main Category")</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>
                                @if (Model.Active)
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Inactive</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td>
                                @if (!string.IsNullOrEmpty(Model.ImagePath))
                                {
                                    <img src="@Model.ImagePath" alt="@Model.Name" width="100" />
                                }
                                else
                                {
                                    <span class="text-muted">No image</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Category Status Card -->
    <div class="col-xl-6 col-lg-6">
        <div class="card shadow mb-4">
            <!-- Card Header -->
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Status Information</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <div class="row no-gutters align-items-center mb-4">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-uppercase mb-1">Category Status</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @(Model.Active ? "Active" : "Inactive")
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas @(Model.Active ? "fa-check-circle text-success" : "fa-times-circle text-danger") fa-2x"></i>
                    </div>
                </div>

                @if (Model.Deleted)
                {
                    <div class="alert alert-danger mb-0">
                        <i class="fas fa-exclamation-triangle"></i>
                        This category has been marked as deleted.
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-0">
                        <i class="fas fa-info-circle"></i>
                        This category is available in the system.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
