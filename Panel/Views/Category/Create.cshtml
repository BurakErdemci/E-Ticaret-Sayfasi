@model Panel.Models.CategoryCreateModel

@{
    ViewData["Title"] = "Create Category";
    var parentCategories = ViewData["Categories"] as IEnumerable<SelectListItem>;
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Create New Category</h1>
    <a asp-action="Index" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to List
    </a>
</div>

<!-- Create Category Card -->
<div class="row">
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
            <!-- Card Header -->
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Category Information</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="form-group">
                        <label asp-for="Name" class="small mb-1">Category Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ParentId" class="small mb-1">Parent Category</label>
                        <select asp-for="ParentId" class="form-control">
                            <option value="0">Main Category</option>
                            @if (parentCategories != null)
                            {
                                @foreach (var item in parentCategories)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="ParentId" class="text-danger small"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Image" class="small mb-1">Category Image</label>
                        <input asp-for="Image" class="form-control-file" type="file" accept="image/*" />
                        <span asp-validation-for="Image" class="text-danger small"></span>
                    </div>

                    <hr>
                    <div class="form-group mb-0">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save fa-sm"></i> Create Category
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Help Card -->
    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Information</h6>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="fas fa-info-circle fa-3x text-gray-300 mb-3"></i>
                </div>
                <p class="mb-2">Please note:</p>
                <ul class="small text-gray-600">
                    <li class="mb-2">Category name is required</li>
                    <li class="mb-2">If no parent category is selected, it will be created as a main category</li>
                    <li class="mb-2">Categories can be organized in a hierarchical structure</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
