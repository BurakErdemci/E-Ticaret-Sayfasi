@model Panel.Models.ProductEditModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Edit Product";
    var categories = ViewData["Categories"] as IEnumerable<SelectListItem>;
    var brands = ViewData["Brands"] as IEnumerable<SelectListItem>;
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Edit Product</h1>
    <a asp-action="Index" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to List
    </a>
</div>

<div class="row">
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Product Information</h6>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this product?');">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </form>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="form-group">
                        <label asp-for="Name" class="small mb-1">Product Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="small mb-1">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter product description"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CategoryId" class="small mb-1">Category</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="categories">
                            <option value="">Select Category</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger small"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BrandId" class="small mb-1">Marka</label>
                        <select asp-for="BrandId" class="form-control" asp-items="brands">
                            <option value="">Select Brand</option>
                        </select>
                        <span asp-validation-for="BrandId" class="text-danger small"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Price" class="small mb-1">Price</label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" placeholder="Enter price" />
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>

                    <div class="form-group">
                        <label class="small mb-1">Status</label>
                        <div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="Active" value="true" checked="@Model.Active" id="activeRadio">
                                <label class="form-check-label" for="activeRadio">Active</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="Active" value="false" checked="@(Model.Active == false)" id="inactiveRadio">
                                <label class="form-check-label" for="inactiveRadio">Inactive</label>
                            </div>
                        </div>
                        <span asp-validation-for="Active" class="text-danger small"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Image" class="small mb-1">Product Image</label>
                        <input asp-for="Image" class="form-control-file" type="file" accept="image/*" />
                        <span asp-validation-for="Image" class="text-danger small"></span>
                        @if (!string.IsNullOrEmpty(Model.CurrentImagePath))
                        {
                            <div class="mt-2">
                                <img src="@Model.CurrentImagePath" alt="Current Image" width="100" />
                            </div>
                        }
                    </div>

                    <hr>
                    <div class="form-group mb-0">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save fa-sm"></i> Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 